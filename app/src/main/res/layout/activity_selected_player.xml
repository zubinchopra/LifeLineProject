<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.washington.zubinc.lifelineproject.SelectedPlayer">

    <TextView
        android:layout_width="352dp"
        android:layout_height="75dp"
        android:text="You wake up at 6 am and get a call from work. The manager says that there are extra shifts available."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView7"
        android:layout_marginTop="67dp"
        android:textSize="20dp"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say Yes and Skip School"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.277" />
    <Button
        android:id="@+id/say_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say No and start getting ready"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.461"
        android:layout_marginLeft="61dp" />


</android.support.constraint.ConstraintLayout>
